<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> New York Times Article Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card">
                    <h4 class="card-header" id="cardTitle">{{this.title}}</h4>
                    <div class="card-body">
                    <p> <strong>Summary: </strong>{{this.summary}}</p>
                    <p><strong>Link: </Strong><a href={{this.link}} target="_blank">{{this.link}}</a></p>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
                
            </div>
            <br><br>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
            <h4>There are no new articles at this time.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
