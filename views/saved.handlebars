<!--Saved Articles Page-->

<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                    <div class="card">
                        <h4 class="card-header" id="cardTitle">{{this.title}}</h4>
                    <div class="card-body">
                        <p><strong>Summary: </strong> {{this.summary}}</p>
                        <p><strong>Summary: </strong><a href={{this.link}} target="_blank">{{this.link}}</a></p>
                        <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>View/Add Notes</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
                <br><br>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}